@model SystemMonitoring.ViewModels.DeleteIndexViewModel
@{
	ViewData["Title"] = "Delete";
}
<h1>@ViewData["Title"]</h1>


<html>
<head>
</head>
<body>

	<fieldset>
		<p>
			<strong><span>ID:</span> <br /></strong>
			<span>@Model.Id</span>
		</p>
		<p>
			<strong><span>Name:</span><br /></strong>
			<span>@Model.Name</span>
		</p>
		<h4>Are you sure you want to delete this Job?</h4>
		<br />
		<input type="button" value="Delete"
			   onclick="location.href='@Url.Action("ConfirmDelete", "Home", new {taskId = Model.Id})'"
			   style="color: white; background-color: darkred; border: none; padding: 5px; border-radius: 4px;" />

	</fieldset>
</body>
</html>
