<script>
	$('#url').ready(function (e) {
        GetFields();
	});

	$('#url').change(function (e) {
		GetFields();
	});

    function GetFields() {
        var url = $("#url").val();

		$.ajax({
			type: "GET",
			url: "/Home/AddTaskPartial",
			data: { urlInput: url },
			success: function (data) {
				$("#fields").html(data);
			},
			error: function () {
				$("#fields").html("Could not get fields from API entered");
			}
		});
    }

	$('#url').change(function (e) {

		var url = $("#url").val();

		$.ajax({
			type: "GET",
			url: "/Home/AddTaskPartial",
			data: { urlInput: url },
			success: function (data) {
				$("#fields").html(data);
			},
			error: function () {
				$("#fields").html("Could not get fields from API entered");
			}
		});
	});

	$('#addGroup').click(function () {

		var name = $("#groupName").val();

		$.ajax({
			type: "POST",
			url: "/Home/AddNewGroup",
			data: { groupName: name },
			success: function (data) {
				alert('Contact group successfully created');
				GetGroups();
				hideCreate();
			},
			error: function () {
				alert('Could not create group');
			}
		});
	});

	$('#groups').ready(function (e) {
		GetGroups();
	});

	function GetGroups() {
		$.ajax({
			type: "GET",
			url: "/Home/AddUserPartial",
			success: function (data) {
				$("#groups").html(data);
			}
		});
	}

	function showCreate() {
		document.getElementById("newGroup").style.display = "block";
	}

	function hideCreate() {
		document.getElementById("newGroup").style.display = "none";
	}
</script>